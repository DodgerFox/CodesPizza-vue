body
	position relative
	min-width 320px
	width 100%
	color black
	font-weight 600

	&.fixed
		overflow hidden


html
	font-family Montserrat, Arial, sans-serif
	font-size 62.5%
	line-height 1.4
	letter-spacing 0
	min-width 320px
	margin-left auto
	margin-right auto


.wrap
	position relative
	padding 0 30px
	width 100%
	margin-left auto
	margin-right auto
	max-width 1260px
	+to-width(767px)
		padding 0 20px

.main
	display flex
	flex-direction column
	min-height 100vh
	position relative
	z-index 2


.autograph
	position relative
	opacity 0.3
	z-index 10
	padding-bottom 30px
	pointer-events all
	t()
	img
		max-width 80px
	&:hover
		opacity 1