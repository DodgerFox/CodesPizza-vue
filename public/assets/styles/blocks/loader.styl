.loader
    position fixed
    left 0
    top 0
    right 0
    bottom 0
    background-color white
    z-index 20
    center()

    &__dynamic
        animation rotation 2s linear infinite

        img
            width 100px

@keyframes rotation {
    0% {
        transform: rotate(0)
    }
    100%{
        transform: rotate(-360deg)
    }
}