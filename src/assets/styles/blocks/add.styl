.add
    position fixed
    top 0
    right 0
    left 0
    bottom 0
    z-index 11
    background-color white
    opacity 0
    pointer-events none
    t()
    &.open
        opacity 1
        pointer-events all

    .wrap
        height 100%
        center()
    
    &-form
        display flex
        flex-direction column
        align-items center
        max-width 350px
        width 100%
    
    &-text
        font-size 20px
        line-height 22px
        padding-bottom 20px
        color black
        text-align center
    
    &-codes
        border none
        background #f0f0f0
        height 100px
        border-radius 20px
        padding 30px 20px
        font-size 26px
        line-height 30px
        text-align center
        width 100%
    
    &-button
        margin-top 20px
        border none
        padding 10px 20px
        border-radius 50px
        background #5bfbc8
        font-size 18px
        color white
    
    &-close
        position absolute
        right 60px
        top 60px
        cursor pointer
        z-index 2
        img
            width 40px
            pointer-events none
        
        +to-width(768px)
            right 20px
            top 30px