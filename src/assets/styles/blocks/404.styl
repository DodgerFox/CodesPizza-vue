.wrong
    position relative
    width 100%
    height 100vh

    .wrap
        height 100%
        display flex
        flex-direction column
        align-items center
        justify-content center
    
    &-title
        font-size 160px
        padding-bottom 20px
        +to-width(640px)
            font-size 100px
    
    &-text
        font-size 20px
        line-height 24px
        text-align center
        +to-width(640px)
            font-size 16px
            line-height 20px
    
    &-button
        margin-top 30px
        background #d5ffe8
        color #333
        font-size 20px
        padding 15px 30px
        border-radius 40px